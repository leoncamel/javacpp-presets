  <modules>
    <module>opencv</module>
    <module>opencv/opencv-platform</module>
    <module>ffmpeg</module>
    <module>ffmpeg/ffmpeg-platform</module>
    <module>flycapture</module>
    <module>flycapture/flycapture-platform</module>
    <module>libdc1394</module>
    <module>libdc1394/libdc1394-platform</module>
    <module>libfreenect</module>
    <module>libfreenect/libfreenect-platform</module>
    <module>videoinput</module>
    <module>videoinput/videoinput-platform</module>
    <module>artoolkitplus</module>
    <module>artoolkitplus/artoolkitplus-platform</module>
    <module>chilitags</module>
    <module>chilitags/chilitags-platform</module>
    <module>flandmark</module>
    <module>flandmark/flandmark-platform</module>
    <module>fftw</module>
    <module>fftw/fftw-platform</module>
    <module>gsl</module>
